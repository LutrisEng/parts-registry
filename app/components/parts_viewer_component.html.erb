<div class="my-6 grid grid-cols-1 md:grid-cols-3 gap-6">
  <% @parts.each do |part| %>
    <a href="<%= @admin ? admin_part_path(part) : part_path(part) %>" class="block p-6 max-w-sm bg-white rounded-lg border border-gray-200 shadow-md hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
      <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
        <%= part.name %>
        <span class="<%= PartViewerComponent.status_class(part.status) %> text-xs font-semibold mr-2 px-2.5 py-0.5 rounded align-middle">
            <%= t part.short_status_t %>
        </span>
      </h2>
      <p class="font-normal text-gray-700 dark:text-gray-400"><%= part.part_number %></p>
    </a>
  <% end %>
</div>
